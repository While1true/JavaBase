<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarNavigationButtonStyle">@style/toolbar_nav_button</item>
        <item name="android:actionButtonStyle">@style/toolbar_action_button_style</item>
        <item name="android:actionMenuTextColor">#ffffff</item>
        <item name="android:actionOverflowButtonStyle">@style/toolbar_overflow_button_style</item>
        <item name="actionOverflowMenuStyle">@style/toolbar_action_menu_overflow</item>

        <!--溢出按钮图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- 溢出菜单文字颜色-->
        <item name="textAppearanceLargePopupMenu">@style/toolbar_subtitle_style</item>
        <!--二级菜单title-->
        <item name="android:textColorSecondary">#FFF</item>
        <!-- 菜单项点击selector-->
        <item name="actionBarItemBackground">?android:attr/selectableItemBackgroundBorderless</item>

    </style>

    <!--导航键情况-->
    <style name="toolbar_nav_button" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="toolbar_subtitle_style" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--显示在toobar上菜单样式-->
    <style name="toolbar_action_button_style" parent="Widget.AppCompat.Toolbar">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- 溢出菜单图标自定义-->
    <style name="toolbar_overflow_button_style" parent="Widget.AppCompat.Toolbar">
        <item name="android:src">@drawable/ic_menu_more</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>


    <!--打开菜单情况-->
    <style name="toolbar_action_menu_overflow" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，为true则盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">-1dp</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:drawablePadding">0dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>


    <!--菜单分割线-->
    <style name="AppToolbarPopupTheme" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownListViewStyle">@style/AppDropDownListViewStyle</item>
    </style>

    <style name="AppDropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">#353535</item>
        <item name="android:dividerHeight">0.5dp</item>
        <!--<item name="android:textColorPrimary">#353535</item>-->
    </style>

</resources>
